# Application environment
APP_ENV=production

# Base URL for the application (used for emails and redirects)
BASE_URL=https://portal.example.com

# Database connection settings
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=nixor_portal
DB_USER=nixor_user
DB_PASS=

# SMTP settings (PHPMailer)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=no-reply@example.com
SMTP_FROM_NAME="Nixor Portal"
SMTP_SECURE=tls

# Google OAuth client config
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=
GOOGLE_ALLOWED_DOMAIN=

# Upload storage (absolute path outside web root)
UPLOAD_PATH=/home/username/portal_uploads

# Log storage path (absolute path)
LOG_PATH=/home/username/portal_logs

# Cron token for web-triggered cron (optional)
CRON_TOKEN=

# Trusted proxies (comma-separated IPs)
TRUSTED_PROXIES=

# Allowed hosts for base URL construction (comma-separated)
ALLOWED_HOSTS=

# Realtime settings
WS_URL=
WS_TOKEN=
POLL_INTERVAL=8
