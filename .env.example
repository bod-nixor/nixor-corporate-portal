# Application environment (local, staging, production)
APP_ENV=production

# Base URL for the application
BASE_URL=https://portal.example.com

# Database connection settings
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=nixor_portal
DB_USER=nixor_user
DB_PASS=

# SMTP settings
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=no-reply@example.com
SMTP_FROM_NAME="Nixor Portal"
SMTP_SECURE=tls

# Google OAuth client settings
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=
GOOGLE_ALLOWED_DOMAIN=

# Upload storage path (absolute, outside web root)
UPLOAD_PATH=/home/username/portal_uploads

# Log storage path (absolute)
LOG_PATH=/home/username/portal_logs

# Cron token for web-triggered cron
CRON_TOKEN=

# Trusted proxies (comma-separated IPs)
TRUSTED_PROXIES=

# Allowed hosts for base URL construction (comma-separated)
ALLOWED_HOSTS=

# WebSocket queue file path (relative to project root)
WS_QUEUE_FILE=./ws/events.queue

# WebSocket server URL for client connections (optional)
WS_URL=
WS_TOKEN=
POLL_INTERVAL=8
