# Application environment (local, staging, production)
APP_ENV=local

# Base URL for the application
APP_URL=http://localhost:8000

# Database connection settings
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=nixor_portal
DB_USER=root
DB_PASS=

# Google OAuth client ID (used to validate id_token)
GOOGLE_CLIENT_ID=

# WebSocket queue file path (relative to project root)
WS_QUEUE_FILE=./ws/events.queue

# WebSocket server URL for client connections (use wss:// in production)
WS_URL=ws://localhost:8765

# WebSocket server bind settings
WS_HOST=127.0.0.1
WS_PORT=8765

# Optional token required by websocket clients (?token=)
WS_TOKEN=
